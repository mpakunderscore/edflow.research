{
	"manifest_version": 2,

	"name": "edflow",
	"description": "",
	"version": "0.4",

	"options_page": "options.html",
	
    "background": {
      	"scripts": ["js/api.js", "js/background.js"]
    },

    "icons": { "16": "icon2.png",
        "48": "icon2.png",
        "128": "icon2.png" },

	"browser_action": {
		"default_icon": "icon2.png",
        "default_title": "Add"
	},
	  
	"permissions": [
        "notifications",
        "activeTab",
        "http://localhost:9000/*"]
}
